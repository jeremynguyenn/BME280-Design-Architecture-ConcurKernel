/dts-v1/;
/plugin/;

/ {
    compatible = "brcm,bcm2835"; /* Example for Raspberry Pi, adjust as needed */

    /* I2C configuration for BME280 */
    fragment@0 {
        target = <&i2c1>;
        __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";

            bme280@76 {
                compatible = "bosch,bme280";
                reg = <0x76>;
                interrupt-parent = <&gpio>;
                interrupts = <25 2>; /* GPIO25, IRQ_TYPE_EDGE_RISING */
                status = "okay";
            };
        };
    };

    /* SPI configuration for BME280 */
    fragment@1 {
        target = <&spi0>;
        __overlay__ {
            #address-cells = <1>;
            #size-cells = <0>;
            status = "okay";

            bme280@0 {
                compatible = "bosch,bme280";
                reg = <0>;
                spi-max-frequency = <1000000>;
                interrupt-parent = <&gpio>;
                interrupts = <23 2>; /* GPIO23, IRQ_TYPE_EDGE_RISING */
                status = "okay";
            };
        };
    };
};